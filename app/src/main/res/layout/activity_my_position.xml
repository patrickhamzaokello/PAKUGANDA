<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".MyPosition">


    <LinearLayout
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:elevation="2dp"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="20dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:padding="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current GPS Position"
            android:textSize="20sp"
            android:fontFamily="@font/lexend_bold"
            android:textColor="@color/black"/>





        <TextView
            android:id="@+id/latitude_cords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/lexend_regular"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/longitude_cord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/lexend_regular"
            android:textColor="#292929"/>

        <LinearLayout
            android:id="@+id/refresh_gps"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_btn_bg"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingVertical="10dp"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/md_theme_light_primary"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:tint="@color/white"
                android:src="@drawable/material_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locate Me"
                android:fontFamily="@font/lexend_bold"
                android:textColor="@color/md_theme_light_onPrimary"
                android:textSize="15sp"/>

        </LinearLayout>


    </LinearLayout>



    <com.google.android.gms.maps.MapView
        android:layout_alignParentTop="true"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/info_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>