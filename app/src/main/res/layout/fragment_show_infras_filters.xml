<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:background="@drawable/cornercircle"
    android:backgroundTint="@color/white"
    android:orientation="vertical">



        <TextView
            android:id="@+id/type_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_light"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Apply Filter to Map"
            android:textColor="@color/md_theme_dark_scrim"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/type_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_lable"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/lexend_light"
            android:gravity="left"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_lable"
            android:text="Select type to filter"
            android:textColor="@color/md_theme_dark_scrim"
            android:textSize="18sp" />





    <ListView
        android:id="@+id/list_view_1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/type_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:transitionName="account_change"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply_filter"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:transitionName="account_change"
        app:backgroundTint="@color/md_theme_light_primary"
        app:strokeColor="@color/md_theme_light_primary"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>