<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:background="@color/md_theme_light_onPrimary"
    tools:context=".LoginMaterial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:paddingBottom="40dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">



            <TextView
                android:id="@+id/login_welcomeback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/md_theme_dark_scrim"
                android:textSize="35sp"
                android:transitionName="logo_text"

                />

            <TextView
                android:id="@+id/login_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lexend_regular"
                android:includeFontPadding="false"
                android:text="Log in to PAK 4 Humanity to get started"
                android:textColor="@color/md_theme_dark_scrim"
                android:textSize="22sp"
                android:transitionName="logo_desc" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_username"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username / Email"
                    android:textColorHint="@color/md_theme_dark_scrim"
                    android:transitionName="username_input"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:boxStrokeErrorColor="@color/md_theme_dark_onError"
                    app:endIconTint="@color/md_theme_dark_scrim"
                    app:hintTextColor="@color/md_theme_dark_scrim">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTextUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/md_theme_light_onPrimary"
                        android:inputType="textAutoComplete"
                        android:fontFamily="@font/lexend_light"
                        android:textColor="@color/md_theme_dark_scrim" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:textColorHint="@color/md_theme_dark_scrim"
                    android:transitionName="password_input"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:boxStrokeErrorColor="@color/md_theme_dark_onError"
                    app:endIconTint="@color/md_theme_dark_scrim"
                    app:hintTextColor="@color/md_theme_dark_scrim"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/md_theme_dark_scrim">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/md_theme_light_onPrimary"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lexend_light"
                        android:textColor="@color/md_theme_dark_scrim"
                        app:endIconTint="@color/md_theme_dark_scrim"

                        />


                </com.google.android.material.textfield.TextInputLayout>



                <LinearLayout
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_btn_bg"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="@color/md_theme_light_primary"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_material_symbols_login"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login to Pak.UG"
                        android:fontFamily="@font/lexend_bold"
                        android:textColor="@color/md_theme_light_onPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signup_screen"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/md_theme_dark_scrim"
                    android:transitionName="account_change"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/lexend_bold"
                    app:strokeColor="@color/md_theme_dark_scrim"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/forgotPassword"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Forgot Password"
                    android:textColor="@color/md_theme_dark_scrim"
                    android:transitionName="account_change"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/md_theme_dark_scrim"
                    app:strokeWidth="1dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lexend_regular"
                android:gravity="center"
                android:text="@string/continue_agree"
                android:textColor="@color/md_theme_dark_scrim"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lexend_regular"
                android:gravity="center"
                android:text="@string/learnmore"
                android:textColor="@color/md_theme_dark_scrim"
                android:textSize="12sp" />



        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>

