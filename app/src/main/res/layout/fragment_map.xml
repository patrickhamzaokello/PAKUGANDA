<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".Fragments.MapFragment">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:elevation="2dp"
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/infrastructure_filter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:background="@null"
                app:tint="@color/black"
                android:src="@drawable/custom_filter_btn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Map"
                android:layout_gravity="center"
                android:textSize="8sp"
                android:textColor="@color/black"/>
            <ImageButton
                android:id="@+id/normal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:background="@null"
                app:tint="@color/black"
                android:src="@drawable/custome_map_icon"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default view"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/satelite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@null"
                app:tint="@color/black"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/custome_sattlite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satellite view"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>



    <com.google.android.gms.maps.MapView
        android:layout_alignParentTop="true"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

</FrameLayout>